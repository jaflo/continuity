<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>Continuity</title>
	<link rel="stylesheet" href="/style.css" />
	<script src="/lib/prefixfree-1.0.7.min.js"></script>
</head>
<body>
<div id="wrapper">
	<header>
		<h1><a href="/">
			<div></div>
			<span>Continuity</span>
		</a></h1>
		{{#if user}}
		<div id="user" class="loggedin">
			<a href="/user/{{user.shortID}}">profile</a>
			<a href="/logout">log out</a>
		</div>
		{{else}}
		<div id="user" class="loggedout">
			<a href="/login">log in</a>
			<a href="/signup">sign up</a>
		</div>
		{{/if}}
	</header>
	<main>
		{{#if success}}
			<div class="alert success">
				<ul>
					{{#each success}}<li>{{this}}</li>{{/each}}
				</ul>
			</div>
		{{/if}}
		{{#if error}}
			<div class="alert error">
				<ul>
					{{#each error}}<li>{{this}}</li>{{/each}}
				</ul>
			</div>
		{{/if}}
		<noscript class="alert error">
			<i class="icon-info"></i>
			This website performs poorly without JavaScript.
		</noscript>
		{{{body}}}
	</main>
	<div id="message">
		<div class="cover close"></div>
		<div class="box">
			<h2 class="header">
				<span></span>
				<div class="close">&times;</div>
			</h2>
			<div class="contents"></div>
			<div class="buttons">
				<button type="button" class="close">Okay</button>
			</div>
		</div>
	</div>
	<footer>
		&copy; 2016 &ndash; all continuations belong to their respective authors
	</footer>
</div>
<script src="/lib/jquery-3.1.1.min.js"></script>
<script src="/lib/timeago-1.5.3.min.js"></script>
<script src="/front.js"></script>
</body>
</html>
