<!DOCTYPE html>
<html>
<head>
	<title>Continuity{{#if currentID}}:{{currentID}}{{/if}}</title>
	<link rel="stylesheet" href="/style.css" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>
</head>
<body>
<header>
	<h1><a href="/">Continuity</a>{{#if currentID}}:<a href="/{{currentID}}">{{currentID}}</a>{{/if}}</h1>
	{{#if user}}
	<div id="user" class="loggedin">
		Welcome back <a href="/user/2">{{user.username}}</a>! {{user.emoji}}
	</div>
	{{else}}
	<div id="user" class="loggedout">
		Hi stranger! Please <a href="/login">log in</a> or <a href="/signup">sign up</a> to star and continue stories.
	</div>
	{{/if}}
</header>
<main>
	{{#if success}}
		<div class="alert success">
			<ul>
				{{#each success}}<li>{{this}}</li>{{/each}}
			</ul>
		</div>
	{{/if}}
	{{#if error}}
		<div class="alert error">
			<ul>
				{{#each error}}<li>{{this}}</li>{{/each}}
			</ul>
		</div>
	{{/if}}
	{{{body}}}
</main>
<footer>
	&copy; 2016 &ndash; all continuations belong to their respective authors
</footer>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script src="/front.js"></script>
</body>
</html>
