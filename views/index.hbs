{{#if notfound}}
<div class="alert error">
	Story {{currentID}} does not exist!
	<a href="/">Go home</a>
</div>
{{else}}
<div id="story">
	<div class="master piece">
		<div class="options">
			<a href="#" class="author">
				<i>😀</i>
				<span></span>
			</a>
			<a href="#" class="star">
				<i>⭐</i>
				<span>star</span>
			</a>
			<a href="#" class="rewind">
				<i>⏪</i>
				<span>rewind</span>
			</a>
		</div>
		<div class="content"></div>
	</div>
	{{#each stories}}
	<div class="piece" id="piece{{shortID}}">
		<div class="options">
			<a href="/user/{{author.id}}" class="author">
				<i>{{author.emoji}}</i>
				<span>by {{author.display}}</span>
			</a>
			<a href="/{{#if starred}}un{{/if}}star" class="star">
				<i>{{#if starred}}🌟{{else}}⭐{{/if}}</i>
				<span>{{#if starred}}un{{/if}}star</span>
			</a>
			<a href="/story/{{shortID}}" class="rewind">
				<i>⏪</i>
				<span>rewind</span>
			</a>
		</div>
		<div class="content">{{content}}</div>
	</div>
	{{/each}}
</div>
<form action="/continue" id="next">
	<input type="hidden" name="parent" value="{{currentID}}" />
	<textarea name="content" cols="30" rows="5" placeholder="Write your own continuation"></textarea>
	<button type="submit" class="primary">
		<span class="continue">or read someone else's continuation</span>
		<span class="write">submit your continuation</span>
	</button>
</form>
{{/if}}
