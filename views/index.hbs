<div id="story">
	<div class="master piece">
		<div class="options">
			<a href="#" class="author">
				<i>😀</i>
				<span></span>
			</a>
			<a href="#" class="star">
				<i>⭐</i>
				<span>star</span>
			</a>
			<a href="#" class="rewind">
				<i>⏪</i>
				<span>rewind</span>
			</a>
		</div>
		<div class="content"></div>
	</div>
	{{#each story}}
	<div class="piece" id="piece{{id}}">
		<div class="options">
			<a href="/user/{{author.id}}" class="author">
				<i>{{author.emoji}}</i>
				<span>by {{author.display}}</span>
			</a>
			<a href="/{{id}}/star" class="star">
				<i>⭐</i>
				<span>{{#if starred}}un{{/if}}star</span>
			</a>
			<a href="/{{id}}" class="rewind">
				<i>⏪</i>
				<span>rewind</span>
			</a>
		</div>
		<div class="content">{{content}}</div>
	</div>
	{{/each}}
</div>
<form action="/continue" id="next">
	<input type="hidden" name="insertafter" value="{{currentID}}" />
	<textarea name="text" cols="30" rows="5" placeholder="Write your own continuation"></textarea>
	<button type="submit">
		<span class="continue">or read someone else's continuation</span>
		<span class="write">submit your continuation</span>
	</button>
</form>
