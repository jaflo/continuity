{{#if notfound}}
<div class="alert error">
	{{currentID}} does not exist!
	<a href="/">Go home</a>
</div>
{{else}}
<div id="story">
	<div class="master piece">
		<div class="options">
			<a href="#" class="author">
				<i>ðŸ˜€</i>
				<span></span>
			</a>
		</div>
		<div class="content"></div>
	</div>
	{{#each stories}}
	<div class="piece{{#if starred}} starred{{/if}}" id="piece{{shortID}}">
		<div class="options">
			<a href="/user/{{author.id}}" class="author">
				<i>{{author.emoji}}</i>
				<span>by {{author.display}}</span>
			</a>
		</div>
		<div class="content">{{content}}</div>
	</div>
	{{/each}}
</div>
<form action="/continue" id="next">
	<input type="hidden" name="parent" value="{{currentID}}" />
	<div class="inputlike">
		<textarea name="content" cols="30" rows="5" placeholder="Write your own continuation">{{storyfragment}}</textarea>
		<div class="info">
			<div class="status"></div>
			<a href="/help#formatting">formatting</a>
		</div>
	</div>
	<button type="submit" class="primary">
		<span class="continue">or read someone else's continuation</span>
		<span class="write">submit your continuation</span>
	</button>
</form>
<div id="radial" class="collapsed">
	<a href="" class="bubble1 star"><i class="icon-star_border"></i></a>
	<a href="" class="bubble2 rewind"><i class="icon-rewind"></i></a>
	<a href="" class="bubble3 author"><i class="icon-face"></i></a>
	<a href="" class="bubble4 edit"><i class="icon-edit"></i></a>
	<a href="" class="bubble5 flag"><i class="icon-flag"></i></a>
	<a href="" class="bubble6 info"><i class="icon-info"></i></a>
	<div class="close"><i class="icon-close"></i></div>
</div>
{{/if}}
