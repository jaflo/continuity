<form id="signup" class="large" action="/signup" method="post">
	<h2>Sign Up</h2>
	<p>
		Create an account to write and star stories!
		<a href="/login">Have an account?</a>
	</p>
	<label for="email">Email</label>
	<input type="email" name="email" id="email" placeholder="kittenlover23@example.com" class="getfocus" value="{{email}}" />
	<label for="displayname">Display name</label>
	<input type="text" name="displayname" id="displayname" placeholder="Poet" value="{{displayname}}" />
	<label for="emoji">Emoji</label>
	<div id="emojipicker" class="inputlike">
		<input type="text" id="emojisearch" placeholder="Search for an emoji" />
		<div class="preview"></div>
		<div class="loading results">loading...</div>
	</div>
	<input type="text" name="emoji" id="emoji" placeholder="Choose an emoji" value="{{emoji}}" />
	<label for="password">Password</label>
	<input type="password" name="password" id="password" placeholder="•••••••" />
	<label for="reentered">Re-enter Password</label>
	<input type="password" name="reentered" id="reentered" placeholder="•••••••" />
	<script>
	var solvedCaptcha = false, loadedRecaptcha = false;
	function loaded() {
		grecaptcha.render("captcha", {
			"sitekey": "6LfEwhAUAAAAADb7sck8_dqm-Y_U6VuuEJIDiHj8",
			"callback": function() {
				solvedCaptcha = true;
			}
		});
		loadedRecaptcha = true;
		$("#signup button").removeAttr("disabled");
	}
	</script>
	<script src="https://www.google.com/recaptcha/api.js?onload=loaded&render=explicit" async defer></script>
	<div id="captcha"></div>
	<button type="submit" class="primary" disabled>Sign up</button>
</form>
